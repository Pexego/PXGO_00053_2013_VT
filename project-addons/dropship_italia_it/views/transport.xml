<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="transporter_form_dropship" model="ir.ui.view">
        <field name="name">transporter.form.dropship</field>
        <field name="model">transportation.transporter</field>
        <field name="inherit_id" ref="transportation.transporter_form"/>
        <field name="arch" type="xml">
            <field name="service_ids" position="after">
                <field name="dropship"/>
            </field>
            <xpath expr="//field[@name='service_ids']/tree/field[@name='name']" position="after">
                <field name="dropship"/>
            </xpath>
            <xpath expr="//field[@name='service_ids']/form/field[@name='name']" position="after">
                <label for="dropship"/>
                <field name="dropship"/>
            </xpath>
        </field>
    </record>
</odoo>