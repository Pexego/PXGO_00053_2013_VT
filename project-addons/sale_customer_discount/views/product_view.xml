<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_product_tree_view_add_discount" model="ir.ui.view">
            <field name="name">product.product.tree.add.discount</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="lst_price" position="replace">
                    <field name="list_price1" string="PVP Iberia"/>
                    <field name="list_price3" string="PVP Italy"/>
                    <field name="list_price4" string="PVP France"/>
                    <field name="list_price2" string="PVP Europe"/>
                    <field name="pvi1_price" string="PVI Iberia"/>
                    <field name="pvi3_price" string="PVI Italy"/>
                    <field name="pvi4_price" string="PVI France"/>
                    <field name="pvi2_price" string="PVI Europe"/>
                </field>
                <field name="uom_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="attribute_value_ids" position="replace"/>
            </field>
        </record>

         <record id="product_kanban_view_add_discount" model="ir.ui.view">
            <field name="name">Product Kanban</field>
            <field name="model">product.product</field>
            <field name="mode">primary</field>
            <field eval="1" name="priority"/>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="replace">
                    <field name="list_price1"/>
                    <field name="list_price2"/>
                    <field name="list_price3"/>
                    <field name="list_price4"/>
                </field>
            </field>
        </record>

        <record id="product_add_increment_cost" model="ir.ui.view">
            <field name="name">product.add_increment_cost</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="after">
                    <field name="standard_price_2_inc" colspan="2" widget='monetary'
                           options="{'currency_field': 'cost_currency_id', 'field_digits': True}"
                           readonly="1" force_save="1"/>
                    <label for="cost_increment" groups="product_pricelist_custom.group_inc_mng"/>
                    <div groups="product_pricelist_custom.group_inc_mng">
                        <field name="cost_increment" groups="product_pricelist_custom.group_inc_mng" class="oe_inline"/> %%
                    </div>
                </field>
            </field>
        </record>



    </data>
</odoo>
