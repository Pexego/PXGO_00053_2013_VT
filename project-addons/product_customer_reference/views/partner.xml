<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_product_customer_references_form" model="ir.ui.view">
            <field name="name">res.partner.product.customer.references.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <page name="sales_purchases" position="after">
                    <field name="area_id" invisible="1"/>
                    <page string="Product Customer References" name="customer_product_references"
                    attrs="{'invisible': [('area_id', '!=', %(product_customer_reference.projects_big_accounts_area)d)]}">
                        <group>
                            <field name="product_reference_ids" nolabel="1">
                                <tree editable="bottom">
                                     <field name="product_id"/>
                                     <field name="customer_reference"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>
