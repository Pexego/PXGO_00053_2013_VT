<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_order_add_prospective_form" model="ir.ui.view">
            <field name="name">sale.order.add.prospective.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company', '=', True), ('customer', '=', True), '|', ('active', '=', True), '&amp;', ('active', '=', False), ('prospective', '=', True)]</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
