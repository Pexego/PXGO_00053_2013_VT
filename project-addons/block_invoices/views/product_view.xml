<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_add_exclude_margin_form" model="ir.ui.view">
        <field name="name">product.product.add.exclude_margin.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']/group[2]" position="inside">
                <field name="exclude_margin"/>
            </xpath>
        </field>
    </record>
</odoo>
