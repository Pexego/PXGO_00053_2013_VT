<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_show_amazon_refunds" model="ir.actions.act_window">
        <field name="name">Refunds</field>
        <field name="res_model">amazon.sale.refund</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field eval="False" name="view_id"/>
        <field name="view_amazon_sale_refund_filter"/>
        <field name="context">{
            'search_default_errors_filter': 1
            }
        </field>
    </record>


    <menuitem id="refunds_amazon_menu" name="Refunds" sequence="1" action="action_show_amazon_refunds"
              parent="sales_amazon_parent_menu"/>


    <record id="amazon_sale_refund_tree" model="ir.ui.view">
        <field name="name">amazon.sale.refund.tree</field>
        <field name="model">amazon.sale.refund</field>
        <field name="arch" type="xml">
            <tree string="Amazon Refunds" decoration-danger="state=='error'">
                <field name="amazon_order_name"/>
                <field name="amazon_order_id"/>
                <field name="marketplace_id"/>
                <field name="asin_code"/>
                <field name="product_id"/>
                <field name="refund_date"/>
                <field name="product_qty"/>
                <field name="price_unit"/>
                <field name="refund_id"/>
                <field name="amazon_refund_name"/>
                <field name="state"/>
                <field name="error_message"/>
            </tree>
        </field>
    </record>


    <record id="view_amazon_sale_refund_filter" model="ir.ui.view">
        <field name="name">amazon.sale.refund.filters</field>
        <field name="model">amazon.sale.refund</field>
        <field name="arch" type="xml">
            <search>
                <field name="amazon_order_name"/>
                <filter string="Errors" domain="[('state','=','error')]" name="errors_filter"/>
            </search>
        </field>
    </record>


</odoo>
