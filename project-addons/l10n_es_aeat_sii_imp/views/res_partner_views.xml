<odoo>

    <record id="custom_view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_es_aeat_sii.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sii_simplified_invoice']" position="replace">
            </xpath>
            <xpath expr="//field[@name='aeat_anonymous_cash_customer']" position="after">
                <field name="sii_enabled" invisible="1"/>
                <field name="sii_simplified_invoice" attrs="{'invisible': [('sii_enabled', '=', False)]}" groups="base.group_system,account.group_account_manager" string="Facturas Simplificadas"/>
            </xpath>
        </field>
    </record>

</odoo>