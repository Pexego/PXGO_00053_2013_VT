<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_riba_da_emettere_tree" model="ir.ui.view">
        <field name="name">riba.distinta.form</field>
        <field name="model">riba.distinta</field>
        <field name="inherit_id" ref="l10n_it_ricevute_bancarie.view_riba_distinta_form"/>
        <field name="arch" type="xml">
            <button name="riba_line_settlement" position="after">
               <button name="pay_rib_line" type='object' attrs="{'invisible':[('state','=','paid')]}" string="Pay" icon="fa-check"/>
               <button name="rev_rib_line" type='object' attrs="{'invisible':[('state','!=','paid')]}" string="Draft" icon="fa-reply"/>
            </button>
            <button name="confirm" position="after">
               <button name="back_to_draft" type='object' string="Back to draft" attrs="{'invisible':[('state','!=','gen_file')]}"/>
            </button>
        </field>
    </record>
</odoo>