<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="sale_confirm_wizard_form_wizard" model="ir.ui.view">
            <field name="name">sale.confirm.wizard.form.wizard</field>
            <field name="model">sale.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Order">
                    <group>
                        <p style="font-size:20px; color:red">
                            Some of the products of this order aren't available now. Please consider that!
                        </p>
                    </group>
                    <footer>
                        <button string="Okey!" special="cancel" icon="fa-check-square"/>
                    </footer>
                </form>
            </field>
        </record>

</odoo>
