<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_reservation_add_mrp" model="ir.ui.view">
        <field name="name">stock.reservation.form</field>
        <field name="model">stock.reservation</field>
        <field name="inherit_id" ref="stock_reserve_sale.view_stock_reservation_form"/>
        <field name="arch" type="xml">
            <group name="sale" position="inside">
                <field name="mrp_id"/>
            </group>
        </field>
    </record>

    <record id="stock_picking_add_action_open_origin_button_form" model="ir.ui.view">
        <field name="name">stock.picking.add.action.open.origin.button.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="replace">
                <field name="purchase_ids" invisible="1"/>
                <field name="production_ids" invisible="1"/>
                <field name="sale_id" invisible="1"/>
                <label for="origin"/>
                <div class="o_row">
                    <field name="origin"/>
                    <button name="action_open_origin" type="object" class="oe_link" icon="fa-external-link"
                            style="font-size: 16px; margin-bottom: 3px;"
                            attrs="{'invisible':[('purchase_ids','=',[]),('production_ids','=',[]),('sale_id','=',False)]}"/>
                </div>
            </field>
        </field>
    </record>

</odoo>
