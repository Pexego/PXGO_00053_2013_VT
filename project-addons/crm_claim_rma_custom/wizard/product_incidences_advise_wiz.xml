<?xml version="1.0"?>
<odoo>
    <record id="product_incidences_advise_wizard" model="ir.ui.view">
        <field name="name">Product Incidences Advise</field>
        <field name="model">product.incidences.advise.wiz</field>
        <field name="arch" type="xml">
            <form string="Product Incidences Advise">
                <field name="incidence_ids" nolabel="1" readonly="1">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="create_date" readonly="1"/>
                            </tree>
                        </field>
                <footer>
                    <button string="Continue"
                            class="oe_highlight"
                            name="button_continue"
                            type="object"
                            />
                    <button string="No"
                            class="oe_link"
                            special="cancel"
                            />
                </footer>
            </form>
        </field>
    </record>
</odoo>
