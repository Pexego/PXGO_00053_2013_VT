<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_claim_picking_add_om" model="ir.ui.view">
        <field name="name">claim_picking_add_om</field>
        <field name="model">claim_make_picking.wizard</field>
        <field name="inherit_id" ref="crm_claim_rma.view_claim_picking"/>
        <field name="arch" type="xml">
            <group name="locations" position="after">
                <group readonly="1" invisible="context.get('product_return', False)">
                    <field name="odoo_management"/>
                    <field name="not_sync"/>
                </group>
            </group>
            <xpath expr="//field[@name='claim_line_ids']/tree/field[@name='claim_line_id']" position="after">
                <field name="sequence" readonly="1"/>
          </xpath>
        </field>
    </record>
</odoo>
