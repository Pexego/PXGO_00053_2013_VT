<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem name="Received Claims" id="menu_crm_case_claims"
        parent="crm_claim.menu_aftersale" action="crm_case_categ_claim_sort" sequence="1"/>

    <record id="view_pending_rma_filter" model="ir.ui.view">
        <field name="name">view.pending.rma.filter</field>
        <field name="model">crm.claim.pending.wizard</field>
        <field name="arch" type="xml">
            <form string="Pending RMA">
                <field name="line_ids">
                    <tree string="Pending RMA" create="false" delete="false" editable="top">
                        <field name="choose"/>
                        <field name="claim_id_ro"/>
                        <field name="partner_id"/>
                        <field name="partner_shipping_id"/>
                    </tree>
                </field>
                <footer>
                    <button string="Add" name="add_to_claim" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_show_pending_claims" model="ir.actions.act_window">
        <field name="name">Pending RMA</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.claim.pending.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pending_rma_filter"/>
        <field name="target">new</field>
    </record>
</odoo>
