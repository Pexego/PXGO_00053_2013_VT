<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_location_form_add_om" model="ir.ui.view">
        <field name="name">stock.location.form.add_om</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <field name="return_location" position="after">
                <field name="odoo_management"/>
                <field name="not_sync" groups="base.group_no_one"/>
            </field>
        </field>
    </record>

    <record id="view_picking_form_add_custom_fields" model="ir.ui.view">
        <field name="name">stock.picking.form.add_custom_fields</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="priority" position="after">
                <field name="odoo_management"/>
                <field name="not_sync"/>
            </field>
            <button name="button_validate" position="replace">
                <button name="button_validate" attrs="{'invisible': ['|',('state','not in',['assigned','partially_available','confirmed']),('not_sync', '=',False)]}"
                        string="Transfer" groups="base.group_system,crm_claim_rma.sat_group" type="object" class="oe_highlight"/>
            </button>
        </field>
    </record>

    <record id="view_move_picking_tree_modify_qty_confirmed_attributes" model="ir.ui.view">
            <field name="name">stock.move.tree.modify.qty_confirmed.attributes</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="picking_incidences.view_move_picking_tree_add_ready_qty"/>
            <field name="arch" type="xml">
                <field name="priority" position="after">
                    <field name="not_sync" invisible="1"/>
                </field>
                <field name="qty_confirmed" position="attributes">
                    <attribute name="attrs">{'column_invisible': ['|','|','&amp;',('parent.state', 'not in', ['confirmed','partially_available']),'|',('parent.not_sync','=',False),('parent.state','!=','assigned'),('parent.block_picking','=',True),('parent.move_type', '!=' , 'direct')]}</attribute>
                </field>
            </field>
        </record>
      <record id="view_picking_form_modify_buttons_attributes" model="ir.ui.view">
        <field name="name">stock.picking.form.modify.buttons.attributtes</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="picking_incidences.view_picking_form_add_incidences"/>
        <field name="arch" type="xml">
            <button name="action_accept_confirmed_qty" position="attributes">
                <attribute name="attrs">{'invisible':['|','|','&amp;',('state', 'not in', ['confirmed','partially_available']),'|',('not_sync','=',False),('state','!=','assigned'),('block_picking','=',True),('move_type', '!=' , 'direct')]}</attribute>
            </button>
            <button name="action_copy_reserv_qty" position="attributes">
                <attribute name="attrs">{'invisible':['|','|','&amp;',('state', 'not in', ['confirmed','partially_available']),'|',('not_sync','=',False),('state','!=','assigned'),('block_picking','=',True),('move_type', '!=' , 'direct')]}</attribute>
            </button>
        </field>
      </record>
</odoo>
