<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_lines_claim_invoice_line_qty_tree" model="ir.ui.view">
        <field name="name">invoice.lines.claim.invoice.line.qty.tree</field>
        <field name="model">account.invoice.line</field>
        <field name="arch" type="xml">
            <tree string="invoice Lines">
                <field name="invoice_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="claim_invoice_line_qty"/>
                <field name="price_unit"/>
                <field name="discount"/>
                <field name="price_subtotal"/>
                <field name="sale_order_id"/>
            </tree>
        </field>
    </record>
    <record id="invoice_lines_claim_invoice_line_qty_tree_search_view" model="ir.ui.view">
        <field name="name">invoice.lines.claim.invoice.line.qty.tree.search.view</field>
        <field name="model">account.invoice.line</field>
        <field name="arch" type="xml">
            <search string="Invoice Lines">
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="invoice_id"/>
                <field name="type"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                    <filter string="invoice" domain="[]" context="{'group_by':'invoice_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_open_partner_invoice_lines">
        <field name="context">{'search_default_partner_id': active_id, 'default_partner_id': active_id,
            'search_default_type': 'out_invoice', 'default_type': 'out_invoice'}
        </field>
        <field name="name">Invoice Lines</field>
        <field name="res_model">account.invoice.line</field>
        <field name="view_id" ref="invoice_lines_claim_invoice_line_qty_tree"/>
        <field name="search_view_id" ref="invoice_lines_claim_invoice_line_qty_tree_search_view"/>

    </record>

</odoo>
