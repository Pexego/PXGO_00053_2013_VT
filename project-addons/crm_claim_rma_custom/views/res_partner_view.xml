<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_add_sat_email" model="ir.ui.view">
        <field name="name">res.partner.form.sat_email</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="custom_account.view_partner_picking_email_form"/>
        <field name="arch" type="xml">
            <field name="email2" position="after">
                <field name="email3"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_partner_form_add_invoice_lines_widget">
        <field name="name">view.partner.form.add.invoice.lines.widget</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="action"
                        name="%(action_open_partner_invoice_lines)d"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        string="Invoice Lines"/>
            </xpath>
        </field>
    </record>
</odoo>
