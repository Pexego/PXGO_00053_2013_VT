                                    <td class="text-center">
                                        <t t-if="valued_report">
                                            <span t-esc="(l.product_uom_qty*l.price_unit*(1-(l.discount/100)))" t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}"/>
