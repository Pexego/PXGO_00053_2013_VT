<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_custom_document">

<t t-name="custom_report_link.report_invoice_custom_document">
        <t t-call="custom_report_link.external_layout_custom_invoice">
            <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.commercial_partner_id.lang})"/>
            <t t-set="print_hs_code" t-value="doc.env.context.get('print_hs_code',False)"/>
            <t t-set="country_code" t-value="company.country_id.code"/>

            <div class="page">
                <table class="table table-condensed" style="font-size:12px; margin-top: 5%;">
                    <thead>
                        <tr style="font-size:12px; background-color:#da1f2e; color:white;">
                            <t t-if="not print_hs_code">
                                <th width="22%" style="vertical-align:middle;"><strong>Reference</strong></th>
                                <th width="39%" style="vertical-align:middle;"><strong>Description</strong></th>
                                <th width="4%" class="text-center" style="vertical-align:middle;"><strong>Quantity</strong></th>
                                <t t-if="country_code == 'ES'"> <!-- Esto es para Odoo España (Amazon) -->
                                    <t t-if="o.tax_in_price_unit">
                                        <th width="12%" class="text-center" style="vertical-align:middle;"><strong>Unit Price (VAT included)</strong></th>
                                    </t>
                                    <t t-if="not o.tax_in_price_unit">
                                        <th width="12%" class="text-center" style="vertical-align:middle;"><strong>Unit Price</strong></th>
                                    </t>
                                    <th width="8%" class="text-center" style="vertical-align:middle;"><strong>Discount</strong></th>
                                    <t t-if="o.tax_in_price_unit">
                                        <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Amount (VAT excluded)</strong></th>
                                    </t>
                                    <t t-if="not o.tax_in_price_unit">
                                        <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Amount</strong></th>
                                    </t>
                                </t>
                                <t t-if="country_code != 'ES'">
                                    <th width="12%" class="text-center" style="vertical-align:middle;"><strong>Unit Price</strong></th>
                                    <th width="8%" class="text-center" style="vertical-align:middle;"><strong>Discount</strong></th>
                                    <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Amount</strong></th>
                                </t>
                                <th width="10%" class="text-center" style="vertical-align:middle;"><strong>Delivery Note</strong></th>
                            </t>
                            <t t-if="print_hs_code">
                                <th width="18%" style="vertical-align:middle;"><strong>Reference</strong></th>
                                <th width="10%" style="vertical-align:middle;"><strong>H.S. Code</strong></th>
                                <th width="36%" style="vertical-align:middle;"><strong>Description</strong></th>
                                <th width="3%" class="text-center" style="vertical-align:middle;"><strong>Quantity</strong></th>
                                <t t-if="country_code == 'ES'"> <!-- Esto es para Odoo España (Amazon) -->
                                    <t t-if="o.tax_in_price_unit">
                                        <th width="12%" class="text-center" style="vertical-align:middle;"><strong>Unit Price (VAT included)</strong></th>
                                    </t>
                                    <t t-if="not o.tax_in_price_unit">
                                        <th width="10%" class="text-center" style="vertical-align:middle;"><strong>Unit Price</strong></th>
                                    </t>
                                    <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Discount</strong></th>
                                    <t t-if="o.tax_in_price_unit">
                                        <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Amount (VAT excluded)</strong></th>
                                    </t>
                                    <t t-if="not o.tax_in_price_unit">
                                        <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Amount</strong></th>
                                    </t>
                                </t>
                                <t t-if="country_code != 'ES'">
                                    <th width="10%" class="text-center" style="vertical-align:middle;"><strong>Unit Price</strong></th>
                                    <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Discount</strong></th>
                                    <th width="7%" class="text-center" style="vertical-align:middle;"><strong>Amount</strong></th>
                                </t>
                                <th width="9%" class="text-center" style="vertical-align:middle;"><strong>Delivery Note</strong></th>
                            </t>
                        </tr>
                    </thead>
                    <tbody style="font-size:12px; color:6D6E70;">
                        <t t-if="o.sale_order_ids">
                            <t t-set="aux" t-value="0"/>
                            <t t-foreach="o.sale_order_ids" t-as="p">
                                <t t-set="control" t-value="0"/>
                                <tr style="font-size:14px; background-color:#DCDCDC;">
                                    <t t-foreach="o.invoice_line_ids.sorted(key=lambda r: ('SO' in str(r.origin), r.origin or ''))" t-as="l1">

                                        <t t-if="l1.sale_order_id.name == p.name">
                                            <t t-if="not l1.sale_order_id.client_order_ref">
                                                <!--<strong t-raw="l1"/>
                                                <strong t-raw="l1.move_id"/>
                                                <strong t-raw="l1"/>
                                                <strong t-raw="l1.sale_line_id"/>
                                                <strong t-raw="l1.sale_order_id"/>-->
                                                <t t-if="aux == 0">
                                                    <t t-foreach="o.invoice_line_ids" t-as="l2">
                                                        <t t-if="l2.sale_order_id.name == p.name">
                                                            <t t-if="l1.origin != l2.origin">
