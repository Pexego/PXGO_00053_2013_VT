                                            </t>
                                            <t t-if="l1.product_id.type == 'service'">
                                                <td class="text-center"/>
                                            </t>
                                        </tr>
                                        <tr t-if="pack and o.partner_id.commercial_partner_id.explode_kits_in_pdf" t-foreach="pack.bom_line_ids" t-as="p_line" style="font-size:10px">
                                                <t t-set="product_reference" t-value="o.partner_id.commercial_partner_id.product_reference_ids.filtered(lambda product_ref:product_ref.product_id==p_line.product_id)"/>
                                                <td t-if="len(product_reference)==1">(<span t-field="product_reference.customer_reference"/>) <span t-field="p_line.product_id"/></td>
                                                <td t-if="len(product_reference)!=1"><span t-field="p_line.product_id"/></td>
                                                <t t-if="print_hs_code">
                                                    <td class="text-center"><span t-field="p_line.product_id.product_tmpl_id.hs_code_id.local_code"/></td>
                                                </t>
                                                <td><span t-field="p_line.product_id.product_tmpl_id.description_sale"/></td>
                                                <t t-set="decimal" t-value="p_line.product_qty % 1"/>
                                                <t t-if="not decimal == 0">
                                                    <td class="text-center"><span t-esc="'%.1f'% (l1.quantity * p_line.product_qty)"/></td>
                                                </t>
                                                <t t-if="decimal == 0">
                                                    <td class="text-center"><span t-esc="'%.0f'% (l1.quantity * p_line.product_qty)"/></td>
                                                </t>
                                                <td/>
                                                <td/>
                                                <td/>
                                                <td/>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <t t-set="others" t-value="0"/>
                            <t t-if="not o.sale_order_ids">
                                <t t-set="others" t-value="1"/>
                            </t>
                            <t t-foreach="o.invoice_line_ids" t-as="l1">
                                    <!--t t-if="l1.product_id.type == 'service' and others == 0 "-->
                                    <t t-if="others == 0">
                                        <t t-if="not l1.origin">
                                            <t t-set="others" t-value="1"/>
                                        </t>
                                    </t>
                            </t>
                            <t t-if="others">
                                <tr>
                                    <td/>
                                    <td/>
                                    <td colspan="2" style="font-weight: bold; color:#6D6E70;"> Others </td>
                                    <td/>
                                    <td/>
                                    <td/>
                                    <td/>
                                </tr>
                            </t>
