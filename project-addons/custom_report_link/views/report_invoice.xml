                                    <t t-set="pack" t-value="l1.product_id.bom_ids"/>
                                    <!--t t-if="l1.product_id.type == 'service'"-->
                                        <t t-if="not l1.origin">
                                            <t t-set="product_reference" t-value="o.partner_id.commercial_partner_id.product_reference_ids.filtered(lambda product_ref:product_ref.product_id==l1.product_id)"/>
                                            <t t-if="len(product_reference)==1">
                                                <td>(<span t-field="product_reference.customer_reference"/>) <span t-field="l1.product_id"/></td>
                                            </t>
                                            <t t-if="len(product_reference)!=1">
                                                <td><span t-field="l1.product_id"/></td>
                                            </t>
                                            <t t-if="print_hs_code">
                                                <td class="text-center"><span t-field="l1.product_id.product_tmpl_id.hs_code_id.local_code"/></td>
                                            </t>
                                            <t t-if="l1.product_id.description_editable or not l1.product_id">
                                                <td style="font-size:11px"><span t-field="l1.name"/></td>
                                            </t>
                                            <t t-if="l1.product_id and not l1.product_id.description_editable">
                                                <td style="font-size:11px"><span t-field="l1.product_id.product_tmpl_id.description_sale"/></td>
                                            </t>
                                            <t t-set="decimal" t-value="l1.quantity % 1"/>
                                            <t t-if="not decimal == 0">
                                                <td class="text-center"><span t-esc="'%.1f'% l1.quantity"/></td>
                                            </t>
                                            <t t-if="decimal == 0">
                                                <td class="text-center"><span t-esc="'%.0f'% l1.quantity"/></td>
                                            </t>
                                            <td class="text-center">
                                                <span t-field="l1.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                            <td class="text-center"><span t-esc="'%.2f'% l1.discount"/> %</td>
                                            <td class="text-center">
                                                <span t-field="l1.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                            <!--td><span t-field="l1.uos_id" groups="product.group_uom"/></td-->
                                            <t t-if="l1.product_id.type != 'service'">
                                                <td class="text-center"><span t-field="l1.origin"/></td>
                                            </t>
                                            <t t-if="l1.product_id.type == 'service'">
                                                <td class="text-center"/>
                                            </t>
                                             <tr t-if="pack and o.partner_id.commercial_partner_id.explode_kits_in_pdf" t-foreach="pack.bom_line_ids" t-as="p_line" style="font-size:10px">
                                                <t t-set="product_reference" t-value="o.partner_id.commercial_partner_id.product_reference_ids.filtered(lambda product_ref:product_ref.product_id==p_line.product_id)"/>
                                                <td t-if="len(product_reference)==1">(<span t-field="product_reference.customer_reference"/>) <span t-field="p_line.product_id"/></td>
                                                <td t-if="len(product_reference)!=1"><span t-field="p_line.product_id"/></td>
                                                <t t-if="print_hs_code">
                                                    <td class="text-center"><span t-field="p_line.product_id.product_tmpl_id.hs_code_id.local_code"/></td>
                                                </t>
                                                <td><span t-field="p_line.product_id.product_tmpl_id.description_sale"/></td>
                                                <t t-set="decimal" t-value="p_line.product_qty % 1"/>
                                                <t t-if="not decimal == 0">
                                                    <td class="text-center"><span t-esc="'%.1f'% (l1.quantity * p_line.product_qty)"/></td>
                                                </t>
                                                <t t-if="decimal == 0">
                                                    <td class="text-center"><span t-esc="'%.0f'% (l1.quantity * p_line.product_qty)"/></td>
                                                </t>
                                                <td/>
                                                <td/>
                                                <td/>
                                                <td/>
                                            </tr>
                                        </t>
                                    <!--/t-->
                             </tr>
                        </t>
                        <t t-if="not o.sale_order_ids">
                           <tr t-foreach="o.invoice_line_ids.sorted(key=lambda r: ('SO' in str(r.origin), r.origin or ''))" t-as="l1">
                                    <t t-set="product_reference" t-value="o.partner_id.commercial_partner_id.product_reference_ids.filtered(lambda product_ref:product_ref.product_id==l1.product_id)"/>
                                    <t t-set="pack" t-value="l1.product_id.bom_ids"/>

                                    <t t-if="len(product_reference)==1">
