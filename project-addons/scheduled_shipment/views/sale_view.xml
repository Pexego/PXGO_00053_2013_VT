<odoo>
        <record id="view_order_form_scheduled_date" model="ir.ui.view">
            <field name="name">sale.order.scheduled.data</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_shipping']/field[@name='picking_policy']" position="after">
                    <field name="scheduled_date"
                           attrs="{'readonly': [('state','in', ('progress', 'manual', 'shipping_except', 'invoice_except', 'done', 'history', 'cancel'))]}"/>
                    <field name="not_sync_picking" string="Non-Synchronizable Picking" groups="base.group_system" />
                </xpath>
            </field>
        </record>

        <record id="view_order_form_scheduled_date_perm_read" model="ir.ui.view">
            <field name="name">sale.order.scheduled.data.perm</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="scheduled_shipment.view_order_form_scheduled_date"/>
            <field name="groups_id" eval="[(4,ref('stock_custom.commercial_group'))]"/>
            <field name="arch" type="xml">
                <field name="scheduled_date" position="attributes">
                    <attribute name="attrs">{'readonly': [('state','in', ('done','sale'))]}</attribute>
                </field>    
            </field>
        </record>

        <record id="view_add_button_to_schedule" model="ir.ui.view">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <!-- TODO: revisar estados donde aparece el boton -->
                    <button name="action_shedule" string="Schedule Shipping" type="object" groups="base.group_user" 
                        attrs="{'invisible':['|', '|', '|', ('picking_type_code','!=','outgoing'), '&amp;', ('state','in',('assigned')), ('block_picking','=',True), 
                            '&amp;', ('state','in',('assigned')), ('not_sync','=',False), ('state', 'in', ('done','cancel'))]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_picking_form_add_pending_move_scheduled_date" model="ir.ui.view">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="priority" position="after">
                    <field name="scheduled_shipping_date"/>
                </field>
                <field name="scheduled_date" position="before">
                    <field name="date"/>
                </field>
            </field>
        </record>

</odoo>
