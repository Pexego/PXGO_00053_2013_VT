<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_request_info" model="ir.ui.view">
        <field name="name">Shipping Data Information</field>
        <field name="model">picking.rated.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Order Lines">
                <group>
                    <field name="total_weight"/>
                    <t>
                        <b><field name="message_products_weight" style="color:red"/></b>
                        <field name="product_names_without_weight" style="color:red"/>
                    </t>
                    <field name="total_volume"/>
                    <t>
                        <b><field name="message_products_volume" style="color:red"/></b>
                        <field name="product_names_without_volume" style="color:red"/>
                    </t>
                </group>
                <group>
                    <field name="data" mode="tree">
                        <tree string="Data" editable="bottom">
                            <field name="service"/>
                            <field name="amount"/>
                            <field name="currency"/>
                            <field name="transit_time"/>
                            <field name="shipping_weight"/>
                        </tree>
                    </field>
                </group>
                <t>
                    <field name="message_error" style="color:red" />
                </t>
                <footer>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_picking_rated_wizard" model="ir.actions.act_window">
        <field name="name">Shipping Data Information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">picking.rated.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
    </record>

</odoo>
