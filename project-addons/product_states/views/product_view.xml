<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_add_states" model="ir.ui.view">
            <field name="name">product.add.states</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="signal_edition" string="Edition" type="object"
                            attrs="{'invisible': [('state2','in', ['edition', 'published'])]}" class="oe_highlight"/>
                    <button name="signal_publish" string="Publish" type="object"
                            attrs="{'invisible': [('state2','in', ['active', 'published'])]}" class="oe_highlight"/>
                    <field name="state2" widget="statusbar"/>
                </xpath>
            </field>
        </record>

        <record id="product_change_sales_page" model="ir.ui.view">
            <field name="name">product.change.sales.page</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="sales" position="attributes">
                    <attribute name="attrs"></attribute>
                </page>
                <group name="sale" position="attributes">
                    <attribute name="string">Condiciones de venta</attribute>
                </group>
                <field name="categ_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <group name="sale" position="inside">
                    <group>
                        <field name="categ_id" string="Internal Category"/>
                    </group>
                </group>
            </field>
        </record>

    </data>
</odoo>
