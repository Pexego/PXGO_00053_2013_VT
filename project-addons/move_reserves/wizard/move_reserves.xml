<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_reserves" model="ir.ui.view">
        <field name="name">Move Reserves</field>
        <field name="model">move.reserves</field>
        <field name="arch" type="xml">
             <form string="Move reserves">
                <group>
                    <group>
                        <field name="product_id" required="1" options="{'no_create': True, 'no_open': True}" domain="[('type','=','product')]"/>
                        <field name="qty" required="1"/>
                    </group>
                    <div>
                        <br/>Make sure you have permission to move the reserves, the move will be registered.<br/>
                    </div>
                    <label for="reserves_origin_id"/>
                    <field name="reserves_origin_id" options="{'no_create': True, 'no_open': True}" col="4" context="{'tree_view_ref': 'stock.view_move_tree'}"/>
                    <label for="reserves_dest_id"/>
                    <field name="reserves_dest_id" options="{'no_create': True, 'no_open': True}" col="4" context="{'tree_view_ref': 'stock.view_move_tree'}"/>
                </group>
                <footer>
                    <button name="action_move_reserve" string="Move" type="object" class="btn-primary" icon="fa-exchange"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="view_reserves_log" model="ir.ui.view">
        <field name="name">reserves.log.tree</field>
        <field name="model">reserves.log</field>
        <field name="arch" type="xml">
            <tree string="Move reserves Log" create="false" edit="false">
                <field name="move" readonly="1"/>
                 <field name="product_id" readonly="1"/>
                 <field name="qty" readonly="1"/>
                 <field name="user_id" readonly="1"/>
                 <field name="date" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_view_move_reserves" model="ir.actions.act_window">
        <field name="name">Move Reserves</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">move.reserves</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_move_reserves"/>
        <field name="target">new</field>
    </record>

    <record id="action_move_reserves_log" model="ir.actions.act_window">
        <field name="name">Move Reserves Log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reserves.log</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>

    <menuitem id="move_reserves_menu" name="Move Reserves" parent="sale.sale_order_menu"
              action="action_view_move_reserves"
              sequence="5"/>

    <menuitem id="move_reserves_log_menu" name="Move Reserves Log" parent="sale.menu_sale_report"
              action="action_move_reserves_log"
              sequence="10"/>

</odoo>
