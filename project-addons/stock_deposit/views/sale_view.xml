<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_deposit" model="ir.ui.view">
        <field name="name">sale.order.form.deposit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='state']" position="before">
                <field name="deposit"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='no_rappel']" position="before">
                <field name="deposit"/>
                <field name="deposit_date" invisible="1"/>
            </xpath>
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    icon="fa-cubes"
                    type="object"
                    name="action_view_deposits"
                    attrs="{'invisible': [('deposit_count', '=', 0)]}"
                >
                    <field name="deposit_count" widget="statinfo" string="Deposits"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
