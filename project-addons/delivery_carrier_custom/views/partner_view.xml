<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_add_transport" model="ir.ui.view">
        <field name="name">partner.add.is.transport</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="is_transporter"/>
                <field name="new_transporter_id" attrs="{'required': [('is_company', '=', True),('customer','=', True),('active', '=', True)]}"/>
                <field name="new_service_id" attrs="{'required': [('is_company', '=', True),('customer','=', True),('active', '=', True)]}"/>
                <field name="delivery_carrier_type" attrs="{'required': [('is_company', '=', True),('customer','=', True),('active', '=', True)]}"/>
            </field>
        </field>
    </record>

    <record id="res_partner_add_transporter_page" model="ir.ui.view">
        <field name="name">partner.add.transporter.page</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Transportation" attrs="{'invisible': [('is_transporter', '=', False)]}">
                    <separator string="Services"/>
                    <field name="carrier_ids">
                        <tree string="Service">
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
