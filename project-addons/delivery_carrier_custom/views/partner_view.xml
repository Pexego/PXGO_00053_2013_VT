<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_add_transport" model="ir.ui.view">
        <field name="name">partner.add.is.transport</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="is_transporter"/>
                <field name="transporter_id" attrs="{'invisible': [('is_transporter', '=', True)],
                'required': [('is_company', '=', True),('customer','=', True),('active', '=', True), ('is_transporter', '=', False)]}"/>
                <field name="carrier_id" attrs="{'invisible': [('is_transporter', '=', True)],
                'required': [('is_company', '=', True),('customer','=', True),('active', '=', True), ('is_transporter', '=', False)]}"/>
                <field name="delivery_type" attrs="{'invisible': [('is_transporter', '=', True)],
                'required': [('is_company', '=', True),('customer','=', True),('active', '=', True), ('is_transporter', '=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="res_partner_add_transporter_page" model="ir.ui.view">
        <field name="name">partner.add.transporter.page</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Transportation" attrs="{'invisible': [('is_transporter', '=', False)]}">
                    <separator string="Services"/>
                    <field name="carrier_ids">
                        <tree string="Service">
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="res_partner_area_form_add_transporter" model="ir.ui.view">
        <field name="name">res.partner.area.form.add.transporter</field>
        <field name="model">res.partner.area</field>
        <field name="inherit_id" ref="customer_area.res_partner_area_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]" position="after">
                <group>
                    <field name="transporter_rel_ids">
                        <tree>
                            <field name="transporter_id"/>
                            <field name="ratio_shipping"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
