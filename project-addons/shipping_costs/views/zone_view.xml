<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shipping_zone_form_view" model="ir.ui.view">
        <field name="name">shipping.zone.form.view</field>
        <field name="model">shipping.zone</field>
        <field name="arch" type="xml">
            <form>
                <group col="2">
                    <field name="name"/>
                    <field name="transporter_id"/>
                    <field name="country_id"/>
                </group>
                <notebook>
                    <page string="Postal Code Ranges">
                        <field name="postal_code_ids">
                            <tree string="Postal Codes" editable="top">
                                <field name="first_code"/>
                                <field name="last_code"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="shipping_zone_tree_view" model="ir.ui.view">
        <field name="name">shipping.zone.tree.view</field>
        <field name="model">shipping.zone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="transporter_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_open_shipping_zone_view">
        <field name="name">Zones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shipping.zone</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                              (0, 0, {'view_mode': 'tree', 'view_id': ref('shipping_zone_tree_view')}),
                              (0, 0, {'view_mode': 'form', 'view_id': ref('shipping_zone_form_view')})]"
        />
    </record>

    <record id="postal_code_format_form_view" model="ir.ui.view">
        <field name="name">postal.code.format.form.view</field>
        <field name="model">postal.code.format</field>
        <field name="arch" type="xml">
            <form>
                <group col="2">
                    <field name="name"/>
                </group>
                <group col="2">
                    <field name="regex"/>
                    <field name="postal_code_sample"/>
                </group>
                <notebook>
                    <page string="Countries">
                        <field name="country_ids">
                            <tree create="0" delete="0">
                                <field name="name" readonly="True"/>
                                <field name="code" readonly="True"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="postal_code_format_tree_view" model="ir.ui.view">
        <field name="name">postal.code.format.tree.view</field>
        <field name="model">postal.code.format</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="regex"/>
                <field name="postal_code_sample"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_open_postal_code_format_view">
        <field name="name">Postal Code Format</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">postal.code.format</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                              (0, 0, {'view_mode': 'tree', 'view_id': ref('postal_code_format_tree_view')}),
                              (0, 0, {'view_mode': 'form', 'view_id': ref('postal_code_format_form_view')})]"
        />
    </record>

    <record id="country_add_postal_code_format_view" model="ir.ui.view">
        <field name="name">country.add.postal.code.format.view</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="postal_code_format_id"/>
            </field>
        </field>
    </record>

    <menuitem id="shipping_zone_item" name="Shipping Zone" action="action_open_shipping_zone_view"
              parent="transportation.menu_transportation_sale" sequence="13"/>

    <menuitem id="postal_code_format_item" name="Postal Code Format" action="action_open_postal_code_format_view"
              parent="transportation.menu_transportation_sale" sequence="14"/>
</odoo>
