<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="location_zone_form_view" model="ir.ui.view">
        <field name="name">location.zone.form.view</field>
        <field name="model">location.zone</field>
        <field name="arch" type="xml">
            <form>
                <group col="2">
                    <field name="name"/>
                    <field name="transporter_id"/>
                    <field name="country_id"/>
                </group>
                <notebook>
                    <page string="Postal Code Ranges">
                        <field name="postal_code_ids">
                            <tree string="Postal Codes" editable="top">
                                <field name="first_code"/>
                                <field name="last_code"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="location_zone_tree_view" model="ir.ui.view">
        <field name="name">location.zone.tree.view</field>
        <field name="model">location.zone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="transporter_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_open_location_zone_view">
        <field name="name">Zones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">location.zone</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                              (0, 0, {'view_mode': 'tree', 'view_id': ref('location_zone_tree_view')}),
                              (0, 0, {'view_mode': 'form', 'view_id': ref('location_zone_form_view')})]"
        />
    </record>

    <menuitem id="location_zone_item" name="Zone item" action="action_open_location_zone_view"
              parent="transportation.menu_transportation_sale" sequence="13"/>
</odoo>
