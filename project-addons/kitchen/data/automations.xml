<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="confirm_customization" model="base.automation">
        <field name="name">Confirm customization</field>
        <field name="model_id" ref="kitchen.model_kitchen_customization"/>
        <field name="state">code</field>
        <field name="code" eval="'records.action_confirm()'"/>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="kitchen.model_kitchen_customization"/>
        <field name="filter_domain">[('reservation_status', '=', 'to customize')]</field>
        <field name="filter_pre_domain">[('reservation_status', '=', 'waiting')]</field>
    </record>


</odoo>
