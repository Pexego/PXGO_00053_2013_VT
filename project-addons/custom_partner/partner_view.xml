         <record id="rappel_form_add_brand" model="ir.ui.view">
            <field name="name">rappel.form.add.brand</field>
            <field name="model">rappel</field>
            <field name="inherit_id" ref="rappel.rappel_form"/>
            <field name="arch" type="xml">
