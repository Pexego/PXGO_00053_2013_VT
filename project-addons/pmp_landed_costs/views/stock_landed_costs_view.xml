<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_landed_cost_add_standard_price" model="ir.ui.view">
        <field name="name">stock.landed.cost.form</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='additional_landed_cost']" position="after">
                <field name="new_unit_cost"/>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='additional_landed_cost']" position="before">
                <field name="cost_purchase" sum="Total."/>
                <field name="cost_purchase_per_unit"/>
                <field name="cost_percentage_variance"/>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='former_cost_per_unit']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='former_cost']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='cost_purchase']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='weight']" position="attributes">
                <attribute name="sum">Weight</attribute>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='volume']" position="attributes">
                <attribute name="sum">Volume</attribute>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='quantity']" position="attributes">
                <attribute name="sum">Qty.</attribute>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='additional_landed_cost']" position="attributes">
                <attribute name="sum">Total.</attribute>
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//field[@name='valuation_adjustment_lines']/tree/field[@name='volume']" position="after">
                <field name="tariff" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='cost_lines']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True}</attribute>
            </xpath>
            <field name="picking_ids" position="attributes">
                <attribute name="domain">[('state', '=', 'done'),('picking_type_code', '=', 'incoming')]</attribute>
            </field>
            <field name="picking_ids" position="after">
                <field name="container_ids"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="import_sheet_id"/>
            </field>
            <field name="account_move_id" position="after">
                <field name="forwarder_invoice"/>
            </field>
        </field>
    </record>

    <record id='view_stock_landed_cost_tree_picking' model='ir.ui.view'>
        <field name="name">stock.landed.cost.tree.picking</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_tree"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="picking_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="container_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

    <record id="view_stock_landed_cost_search_picking" model="ir.ui.view">
        <field name="name">stock.landed.cost.search.picking</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="picking_ids"/>
                <field name="container_ids"/>
            </field>
        </field>
    </record>

    <record id="view_landed_cost_creator_wizard_form" model="ir.ui.view">
        <field name="name">landed.cost.creator.wizard</field>
        <field name="model">landed.cost.creator.wizard</field>
        <field name="arch" type="xml">
            <form string="Create landed costs">
                <group col="2" string="General">
                    <field name="import_sheet_id" readonly="1"/>
                </group>
                <separator string="Products without weight" colspan="4"/>
                <field name="product_ids" string="">
                    <tree create="false" delete="false">
                        <field name="default_code"/>
                        <field name="weight"/>
                    </tree>
                </field>
                <footer>
                    <button name="create_landed_cost" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_landed_cost_creator_wizard_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Create landed cost</field>
        <field name="res_model">landed.cost.creator.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_landed_cost_creator_wizard_form"/>
        <field name="target">new</field>
    </record>

    <record id="action_open_landed_cost_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Landed costs</field>
        <field name="res_model">stock.landed.cost</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_stock_landed_cost_tree_picking"/>
    </record>
</odoo>
