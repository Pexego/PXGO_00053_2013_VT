<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_import_sheet_form" model="ir.ui.view">
        <field name="name">import.sheet.form</field>
        <field name="model">import.sheet</field>
        <field name="arch" type="xml">
            <form string="Import Sheet">
                <header>
                    <field name="sheet_state" widget="statusbar" statusbar_visible="pending,in_process,done" clickable="True"/>
                </header>
                <group col="2" string="General">
                    <field name="dua"/>
                    <field name="container_id" readonly="1"/>
                    <field name="dua_date"/>
                    <field name="treasury"/>
                </group>
                <group col="4" string="Characteristics">
                    <field name="kgs"/>
                    <field name="cbm"/>
                    <field name="incoterm"/>
                    <field name="destination_port"/>
                    <field name="forwarder_comercial"/>
                    <field name="container_type"/>
                    <field name="channel"/>
                </group>
                <group col="4" string="Costs">
                    <field name="freight"/>
                    <field name="fee"/>
                    <field name="inspection"/>
                    <field name="arrival_cost"/>
                </group>
                <separator string="Landed costs" colspan="4"/>
                <group>
                    <field name="landed_cost_count" invisible="1"/>
                    <button name="action_open_landed_cost_creator" string="Create landed costs"
                            type="object"/>
                </group>
                <field name="landed_cost_ids">
                    <tree create="false" editable="true">
                        <field name="name"/>
                        <field name="date"/>
                        <field name="picking_ids" widget="many2many_tags"/>
                        <field name="container_ids" widget="many2many_tags" edit="false"/>
                        <field name="state"/>
                    </tree>
                </field>
                <separator string="Invoices" colspan="4"/>
                <field name="invoice_ids">
                    <tree editable="bottom">
                        <field name="state" invisible="1"/>
                        <field name="reference"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="view_import_sheet_tree" model="ir.ui.view">
        <field name="name">import.sheet.tree</field>
        <field name="model">import.sheet</field>
        <field name="arch" type="xml">
            <tree default_order="treasury desc">
                <field name="dua"/>
                <field name="container_id"/>
                <field name="dua_date"/>
                <field name="treasury"/>
                <field name="kgs"/>
                <field name="cbm"/>
                <field name="incoterm"/>
                <field name="destination_port"/>
                <field name="forwarder_comercial"/>
                <field name="container_type"/>
                <field name="channel"/>
                <field name="freight"/>
                <field name="fee"/>
                <field name="inspection"/>
                <field name="arrival_cost"/>
                <field name="sheet_state"/>
            </tree>
        </field>
    </record>

    <record id="action_stock_container_import_sheets" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Stock Container Import Sheets</field>
        <field name="res_model">import.sheet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_import_sheet_form"/>
    </record>

    <record id="action_open_import_sheet_tree_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Import Sheets</field>
        <field name="res_model">import.sheet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_import_sheet_tree"/>
    </record>

    <report
        id="import_sheet_xlsx"
        model="import.sheet"
        string="Print to XLSX"
        report_type="xlsx"
        name="purchase_picking.import_sheet"
        file="import_sheet"
        attachment_use="False"
    />

    <menuitem name="Import Sheets" parent="purchase.menu_purchase_control"
        action="action_open_import_sheet_tree_view" id="import_sheet_menu"/>
</odoo>
