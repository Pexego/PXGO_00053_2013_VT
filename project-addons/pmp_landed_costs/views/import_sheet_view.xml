<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_import_sheet_form" model="ir.ui.view">
        <field name="name">import.sheet.form</field>
        <field name="model">import.sheet</field>
        <field name="arch" type="xml">
            <form string="Import Sheet">
                <group col="2" string="General">
                    <field name="dua"/>
                    <field name="container_id" readonly="1"/>
                    <field name="dua_date"/>
                    <field name="treasury"/>
                </group>
                <group col="4" string="Characteristics">
                    <field name="kgs"/>
                    <field name="cbm"/>
                    <field name="incoterm"/>
                    <field name="destination_port"/>
                    <field name="forwarder_comercial"/>
                    <field name="container_type"/>
                    <field name="channel"/>
                </group>
                <group col="4" string="Costs">
                    <field name="freight"/>
                    <field name="fee"/>
                    <field name="inspection"/>
                    <field name="arrival_cost"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_landed_cost_creator_wizard_form" model="ir.ui.view">
        <field name="name">landed.cost.creator.wizard</field>
        <field name="model">landed.cost.creator.wizard</field>
        <field name="arch" type="xml">
            <form string="Create landed costs">
                <group col="2" string="General">
                    <field name="import_sheet_id" readonly="1"/>
                </group>
                <separator string="Products without weight" colspan="4"/>
                <field name="product_ids" string="">
                    <tree create="false" delete="false">
                        <field name="default_code"/>
                        <field name="weight"/>
                    </tree>
                </field>
                <footer>
                    <button name="create_landed_cost" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_import_sheet_tree" model="ir.ui.view">
        <field name="name">import.sheet.tree</field>
        <field name="model">import.sheet</field>
        <field name="arch" type="xml">
            <tree default_order="dua asc">
                <field name="dua"/>
                <field name="container_id"/>
                <field name="dua_date"/>
                <field name="treasury"/>
                <field name="kgs"/>
                <field name="cbm"/>
                <field name="incoterm"/>
                <field name="destination_port"/>
                <field name="forwarder_comercial"/>
                <field name="container_type"/>
                <field name="channel"/>
                <field name="freight"/>
                <field name="fee"/>
                <field name="inspection"/>
                <field name="arrival_cost"/>
            </tree>
        </field>
    </record>

    <record id="action_stock_container_import_sheets" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Stock Container Import Sheets</field>
        <field name="res_model">import.sheet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_import_sheet_form"/>
    </record>

    <record id="action_open_import_sheet_tree_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Import Sheets</field>
        <field name="res_model">import.sheet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_import_sheet_tree"/>
    </record>

    <record id="action_open_landed_cost_creator_wizard_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Create landed cost</field>
        <field name="res_model">landed.cost.creator.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_landed_cost_creator_wizard_form"/>
        <field name="target">new</field>
    </record>

    <report
        id="import_sheet_xlsx"
        model="import.sheet"
        string="Print to XLSX"
        report_type="xlsx"
        name="purchase_picking.import_sheet"
        file="import_sheet"
        attachment_use="False"
    />

    <menuitem name="Import Sheets" parent="purchase.menu_purchase_control"
        action="action_open_import_sheet_tree_view" id="import_sheet_menu"/>
</odoo>
