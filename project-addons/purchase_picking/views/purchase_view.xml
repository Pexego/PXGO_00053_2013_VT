<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_change_view_picking" model="ir.ui.view">
        <field name="name">purchase.order.form.view.picking</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True}</attribute>
            </xpath>
            <button name="action_view_picking" position="replace">
                <field name="picking_created" invisible="1"/>
                <button name="action_view_picking" string="View picking" type="object"
                        attrs="{'invisible': [('picking_created', '=', False)]}"
                        class="oe_highlight"/>
            </button>
            <button name="action_view_picking" position="after">
                <button name="move_lines_create_picking" string="Create picking" type="object"
                        attrs="{'invisible': [('state','in',('draft', 'cancel'))]}"
                        class="oe_highlight"/>
            </button>
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'purchase')]}</attribute>
            </xpath>
            <!--xpath expr="//field[@name='order_line']/tree//field[@name='date_planned']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath-->
             <xpath expr="//field[@name='order_line']/tree//field[@name='account_analytic_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'purchase')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'purchase')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='taxes_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'purchase')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='discount']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'purchase')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                <field name="select_delete"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="before">
                <button name="delete_purchase_lines" icon="fa-trash-o" type="object" class="oe_right"/>
            </xpath>
            <field name="amount_untaxed" position="after">
                <field name="total_no_disc" widget="monetary"/>
                <field name="total_disc" widget="monetary"/>
            </field>
            <field name="partner_ref" position="after">
                <field name="container_ids" widget="many2many_tags" readonly="1" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

    <record id="stock.action_receipt_picking_move" model="ir.actions.act_window">
            <field name="domain" eval="[('picking_id','=', False), ('location_id.usage','!=','internal'), ('location_dest_id.usage', '=', 'internal')]"/>
            <field name="context">{'search_default_not_cancelled': True, 'product_receive': True, 'search_default_New': False}</field>
    </record>

    <record id="purchase_order_line_tree_custom" model="ir.ui.view">
        <field name="name">purchase.order.line.tree.custom</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="product_qty" position="attributes">
                <attribute name="sum">Total Qty.</attribute>
            </field>
            <field name="price_subtotal" position="attributes">
                <attribute name="sum">Subtotal.</attribute>
            </field>
        </field>
    </record>

   <record id="view_purchase_order_filter" model="ir.ui.view">
        <field name="name">purchase.order.list.select</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <filter name="message_needaction" position="after">
                <filter name="not_cancelled" string="Not Cancelled" domain="[('state','!=','cancel')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state','=','cancel')]"/>
            </filter>
        </field>
    </record>

    <record id="purchase.purchase_rfq" model="ir.actions.act_window">
        <field name="name">Requests for Quotation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order</field>
        <field name="context">{'search_default_not_cancelled': 1}</field>
        <field name="domain">[('state','in',('draft','sent','bid','cancel', 'confirmed'))]</field>
        <field name="view_mode">tree,form,graph,calendar</field>
        <field name="search_view_id" ref="view_purchase_order_filter"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a request for quotation.
          </p><p>
            The quotation contains the history of the discussion/negotiation
            you had with your supplier. Once confirmed, a request for
            quotation is converted into a purchase order.
          </p><p>
            Most propositions of purchase orders are created automatically
            by Odoo based on inventory needs.
          </p>
        </field>
    </record>

    <record id="purchase_order_add_first_uninvoiced_picking_date_done_tree" model="ir.ui.view">
          <field name="name">purchase.order.add.first.uninvoiced.picking.date.done.tree</field>
          <field name="model">purchase.order</field>
          <field name="inherit_id" ref="purchase.purchase_order_tree"/>
          <field name="arch" type="xml">
              <field name="invoice_status" position="after">
                  <field name="first_uninvoiced_date"/>
              </field>
          </field>
      </record>
</odoo>
