<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="product_add_tags_form" model="ir.ui.view">
            <field name="name">product.product.add.tags.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Tags">
                        <field name="tag_ids" widget="many2many_tags" colspan="4" nolabel="1" options="{'color_field': 'color'}"/>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- product.tag views-->
        <record id="product_tag_form" model="ir.ui.view">
            <field name="name">product.tag.form</field>
            <field name="model">product.tag</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product tag" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="parent_id"/>
                            </group>
                            <group colspan="4">
                                <field name="child_id">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="product_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

